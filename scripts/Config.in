mainmenu "EPS Android Configuration"

menu "Toolchain"
config TOOLCHAIN
	string "Using which toolchain"
	default "arm-2008q3-41-arm-none-linux-gnueabi-i686-pc-linux-gnu.tar.bz2"
endmenu

menu "Kernel Version"
config KERNEL_SRC
	string "Android 1.0 SDK, Release 1"
	default "linux-2.6.25-android-1.0_r1"
endmenu

menu "BusyBox Version"
config BUSYBOX_SRC
	string "BusyBox 1.13.2"
	default "busybox-1.13.2"
endmenu

menu "Root File System"
config BASE_ROOTFS
	string "Base Root File System"
	default "tiny_rootfs.tgz"
config ANDROID
	bool "Android Root File System"
	default n
config ANDROID_ROOTFS
	string "Using which Version of Android Root File System"
	depends on ANDROID_ROOTFS
	default "r1_rootfs.tgz"
endmenu

menu "HOST TFTP Server"
config HOST_TFTP
	bool "Enable HOST TFTP Server"
	default n
config TFTP_DIR
	string "HOST TFTP PATH(You must have access right)" 
	depends on HOST_TFTP
	default "/home/tftp"
endmenu

### not yet complete , check it again
menu "NFS ROOT"
config NFS_ROOT
	bool "Using NFS ROOT"
	default n
config NFS_ROOT_DIR
	string "NFS ROOT PATH(You must have 'root' privilege)"
	depends on NFS_ROOT
	default "/home/nfs_export/"
endmenu
