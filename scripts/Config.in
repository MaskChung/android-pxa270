#
# For a description of the syntax of this configuration file,
# see scripts/kbuild/config-language.txt.
#

mainmenu "EPS Android Configuration"

menu "Toolchain"
config TOOLCHAIN
	string "Using which toolchain"
	default "arm-2008q3-41-arm-none-linux-gnueabi-i686-pc-linux-gnu.tar.bz2"
endmenu

menu "Linux Kernel"
config KERNEL_SRC
	string "Android 1.0 SDK, Release 1"
	default "linux-2.6.25-android-1.0_r1"
endmenu

menu "BusyBox"
config BUSYBOX_SRC
	string "BusyBox 1.13.2"
	default "busybox-1.13.2"
endmenu

menu "Root File System"
config BASE_ROOTFS
	string "Base Root File System"
	default "tiny_rootfs.tgz"

menuconfig ANDROID
	bool "Enable Android"
	default n

choice
	prompt "Android version"
	depends on ANDROID
	default ANDROID_DEMO
config ANDROID_DEMO
	bool "Android Demonstration"
config MYDROID
	bool "Compile from Android source"
config MYDROID_SRC
	string "Git version"
	depends on MYDROID
	default "cdma-import"

endchoice

config JFFS2
	bool "Using JFFS2 Root File System"
	default n
config YAFFS2
	bool "Using YAFFS2 Root File System"
	default n
endmenu

