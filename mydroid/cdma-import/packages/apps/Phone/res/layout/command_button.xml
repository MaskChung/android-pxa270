<!-- Layout XML file for the Phone app's CommandButton class.
     CommandButton is a subclass of LinearLayout, and contains
     an icon and a text label.
     TODO: This might belong in the framework eventually;
     see the comment in CommandButton.java -->
<!-- Watch out: android:layout_width and android:layout_height are meaningless
     here in this CommandButton element; they're manually set in CallCard.addButton(). -->
<com.android.phone.CommandButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="0dip"
    style="?android:attr/buttonStyle"
    >

    <ImageView android:id="@+id/icon"
               android:paddingLeft="0dip" android:paddingTop="10dip"
               android:paddingRight="0dip" android:paddingBottom="0dip"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />

    <TextView android:id="@+id/title"
              android:textSize="14sp"
              android:textColor="#323232"
              android:paddingLeft="0dip" android:paddingTop="0dip"
              android:paddingRight="0dip" android:paddingBottom="10dip"
              android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              />

</com.android.phone.CommandButton>
